	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"--bail",
				"--timeout", "999999",
				"--colors",
				"src/test.ts",
